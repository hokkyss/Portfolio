{
	"name": "next-ts-boilerplate",
	"version": "0.1.0",
	"private": true,
	"scripts": {
		"dev": "cross-env next dev",
		"build": "cross-env next build",
		"start": "cross-env next start",
		"lint": "cross-env next lint --no-cache",
		"prepare": "husky install"
	},
	"dependencies": {
		"@chakra-ui/react": "^1.8.7",
		"@emotion/react": "^11",
		"@emotion/styled": "^11",
		"axios": "^0.26.1",
		"cross-env": "^7.0.3",
		"firebase": "^9.6.10",
		"framer-motion": "^6",
		"next": "12.1.1",
		"next-pwa": "^5.5.2",
		"react": "17.0.2",
		"react-dom": "17.0.2",
		"react-icons": "^4.3.1",
		"swr": "^1.3.0",
		"uuid": "^8.3.2"
	},
	"devDependencies": {
		"@types/node": "17.0.23",
		"@types/react": "17.0.43",
		"@types/react-dom": "17.0.14",
		"@types/uuid": "^8.3.4",
		"@typescript-eslint/eslint-plugin": "^5.16.0",
		"@typescript-eslint/parser": "^5.16.0",
		"eslint": "8.19.0",
		"eslint-config-next": "12.1.1",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^7.0.4",
		"lint-staged": "^12.3.7",
		"prettier": "^2.6.1",
		"typescript": "4.6.3"
	},
	"prettier": {
		"endOfLine": "auto",
		"useTabs": true,
		"printWidth": 80,
		"arrowParens": "always",
		"semi": false,
		"tabWidth": 2,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"singleQuote": true
	},
	"eslintConfig": {
		"extends": [
			"next/core-web-vitals",
			"eslint:recommended",
			"plugin:jsx-a11y/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"env": {
			"node": true
		},
		"rules": {
			"prettier/prettier": "error",
			"camelcase": "error",
			"no-console": "error",
			"no-unused-vars": "warn",
			"no-unused-labels": "warn",
			"no-else-return": "warn",
			"no-alert": "error",
			"no-compare-neg-zero": "error",
			"no-caller": "error",
			"no-duplicate-imports": "error",
			"no-empty-function": "warn",
			"no-eval": "error",
			"no-new-func": "error",
			"no-this-before-super": "error"
		}
	},
	"lint-staged": {
		"*.ts(x)?": "eslint --ext .ts --ext .tsx"
	}
}
