{
	"name": "hokkkyss-portfolio",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "next dev",
		"build": "next build",
		"start": "next start",
		"lint": "next lint --no-cache",
		"postinstall": "husky install"
	},
	"dependencies": {
		"@chakra-ui/react": "^2.5.1",
		"@emotion/react": "^11.10.5",
		"@emotion/styled": "^11.10.5",
		"@next/font": "^13.1.6",
		"date-fns": "^2.29.3",
		"firebase": "^9.17.1",
		"firebase-admin": "^11.5.0",
		"framer-motion": "^9.0.4",
		"next": "^13.1.6",
		"next-pwa": "^5.6.0",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"react-icons": "^4.3.1",
		"react-markdown": "^8.0.5",
		"reactfire": "^4.2.2",
		"remark-gfm": "^3.0.1"
	},
	"devDependencies": {
		"@chakra-ui/cli": "^2.3.0",
		"@types/next-pwa": "^5.6.2",
		"@types/node": "18.0.4",
		"@types/react": "^18.0.28",
		"@types/react-dom": "^18.0.11",
		"@typescript-eslint/eslint-plugin": "^5.30.6",
		"@typescript-eslint/parser": "^5.52.0",
		"eslint": "^8.34.0",
		"eslint-config-next": "^13.1.6",
		"eslint-config-prettier": "^8.5.0",
		"eslint-plugin-jsx-a11y": "^6.6.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^8.0.1",
		"lint-staged": "^13.1.2",
		"prettier": "^2.7.1",
		"typescript": "4.7.4"
	},
	"prettier": {
		"endOfLine": "auto",
		"useTabs": true,
		"printWidth": 80,
		"arrowParens": "always",
		"semi": false,
		"tabWidth": 2,
		"bracketSpacing": true,
		"jsxSingleQuote": false,
		"singleQuote": true
	},
	"eslintConfig": {
		"extends": [
			"next/core-web-vitals",
			"eslint:recommended",
			"plugin:jsx-a11y/recommended",
			"plugin:@typescript-eslint/recommended",
			"plugin:prettier/recommended"
		],
		"parser": "@typescript-eslint/parser",
		"env": {
			"node": true
		},
		"rules": {
			"prettier/prettier": "error",
			"camelcase": "error",
			"no-console": "error",
			"no-unused-vars": "off",
			"no-unused-labels": "warn",
			"no-else-return": "warn",
			"no-alert": "error",
			"no-compare-neg-zero": "error",
			"no-caller": "error",
			"no-duplicate-imports": "error",
			"no-empty-function": "warn",
			"no-eval": "error",
			"no-new-func": "error",
			"no-this-before-super": "error"
		}
	},
	"lint-staged": {
		"*.ts(x)?": "lint"
	}
}
